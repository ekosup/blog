---
export interface Props {
  text: string;
  body: string;
  dark?: boolean;
}

const { text, body, dark } = Astro.props as Props;
---

<div class={`card ${dark && 'dark'}`}>
  <h3>{text}</h3>
  <p>{body}</p>
</div>

<style>
  .card {
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
  }

  .dark {
    background: var(--color-primary);
    color: #fff;
  }
</style>
